{% extends "base.njk" %}

{% block styles %}
<link href="/{{fingerprint['css/projects.css']}}" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="content">

	<h1 class="centered">{{title}}</h1>
	<hr />
	<div class="centered">
		{{ contents | safe }}
	</div>

	{% for project in collections.projects -%}
	<h3 class="project-title">{{project.title}}</h3>
	<div class="project-description">
	{{ project.contents | safe }}
	</div>
	{% endfor -%}

</div>
{% endblock %}
