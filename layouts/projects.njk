{% extends "base.njk" %}

{% block styles %}
<link href="/{{fingerprint['css/projects.css']}}" rel="stylesheet">
{% endblock %}

{% block content %}
<div class="content">

	<h1>{{title}}</h1>
	<hr />
	<div>{{ contents | safe }}</div>

	{% for project in collections.projects -%}
	<div class="hbox project-header">
		<h3 class="project-title">{{project.title}}</h3>
		<a href="{{project.sourceCodeUrl}}">Source</a>
	</div>
	<div class="project-description">
	{{ project.contents | safe }}
	</div>
	{% endfor -%}

</div>
{% endblock %}
