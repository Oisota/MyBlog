<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="author" content="{{site.author}}">
		<meta name="description" content="{% block meta_description %}I talk about software, programming and tech related stuff{% endblock %}">
		<meta name="robots" content="index, follow">
		<link rel="alternate" type="application/rss+xml" href="{{site.rssUrl}}" />
		<title>{{title}}</title>
		{% block styles %}
		{% endblock %}
		<link href="/{{fingerprint['css/main.css']}}" rel="stylesheet" type="text/css">
		<link rel="stylesheet" type="text/css" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
	</head>
	<body>

		<div class="topbar">
			<nav id="topbar-nav" class="hbox">
				<div class="vbox">
					{% for link in collections.navlinks -%}
					{% if link.name == name %}
					<a class="link-disable" href="/{{link.path | safe}}">{{link.nav_title}}</a>
					{% else %}
					<a href="/{{link.path | safe}}">{{link.nav_title}}</a>
					{% endif %}
					{% endfor -%}
				</div>
				<div class="vbox social">
					{% for link in links.social -%}
					<span>
						<i class="{{link.icon}} la-lg"></i>
						<a href="{{link.url}}">{{link.title}}</a>
					</span>
					{% endfor %}
				</div>
			</nav>
			<header class="hbox">
				<span id="menu-btn" class="menu-btn">
					<div></div>
					<div></div>
					<div></div>
				</span>
			</header>
		</div>

		<div class="left vbox">
			<img height="130px" width="130px" src="/assets/me.jpg" alt="Me" />
			<h1>{{site.author}}</h1>
			<nav class="vbox">
				{% for link in collections.navlinks -%}
				{% if link.name == name %}
				<a class="navlink link-disable" href="/{{link.path | safe}}">{{link.nav_title}}</a>
				{% else %}
				<a class="navlink" href="/{{link.path | safe}}">{{link.nav_title}}</a>
				{% endif %}
				{% endfor -%}
			</nav>
			<hr class="nav-separator">
			<footer class="social">
				{% for link in links.social -%}
				<span>
					<i class="{{link.icon}} la-lg"></i>
					<a href="{{link.url}}">{{link.title}}</a>
				</span>
				{% endfor %}
			</footer>
		</div>

		<main>
			{% block content %}
			{% endblock %}
		</main>

		<script charset="utf-8">
(() => {
	let menuOpen = false;
	document.getElementById('menu-btn').addEventListener('click', (event) => {
		const topbar = document.getElementById('topbar-nav');
		if (menuOpen) {
			topbar.style.display = 'none';
			menuOpen = false;
		} else {
			topbar.style.display = 'flex';
			menuOpen = true;
		}
	});
})();
		</script>
		{% block scripts %}
		{% endblock %}
		{% if liveReloadEnabled %}
		<script src="http://localhost:8081/livereload.js"></script>
		{% endif %}
	</body>
</html>
